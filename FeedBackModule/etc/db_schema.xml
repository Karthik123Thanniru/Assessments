<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="feedback_data" resource="default" engine="innodb" comment="Feedback Form Data">
        <column xsi:type="int" name="feedback_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Feedback ID" />
        <column xsi:type="int" name="customer_id" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="firstname" nullable="false" length="255" comment="First Name" />
        <column xsi:type="varchar" name="lastname" nullable="false" length="255" comment="Last Name" />
        <column xsi:type="varchar" name="email" nullable="false" length="255" comment="Email" />
        <column xsi:type="text" name="comment" nullable="false" comment="Comment" />
        <column xsi:type="varchar" name="validation" nullable="false" length="25" comment="validate"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="feedback_id" />
        </constraint>
    </table>
</schema>
